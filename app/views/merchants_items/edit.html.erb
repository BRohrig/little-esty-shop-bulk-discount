<h2>Update Item: <%= @item.name %></h2>
<%= form_with url: edit_merchant_item_path, method: :patch, local: true do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, :value => @item.name %>

  <%= f.label :description %>
  <%= f.text_area :description, :value => @item.description, size: "30x20" %>

  <%= f.label :unit_price %>
  <%= f.number_field :unit_price, :value => @item.unit_price %>

  <%= f.submit %>
<% end %>