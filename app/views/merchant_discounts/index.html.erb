<center><h3>Upcoming Holidays:</center>
<% @holidays.each do |holiday| %>
  <center><%= "#{holiday.name} is on #{holiday.date}" %></center>
<% end %>
<center><h2><%= "#{@merchant.name} Discounts" %></center>
<%= link_to "Create New Discount", new_merchant_bulk_discount_path(@merchant.id) %>
<div id="discounts">
  <% @discounts.each do |discount| %>
    <div id="discounts-<%= discount.id %>">
    <h3>
    <%= "This Discount Gives #{discount.percent_off}% off if the customer buys #{discount.threshold} items" %>
    <%= link_to "Details", merchant_bulk_discount_path(@merchant.id, discount.id) %>
    <%= button_to "Delete Discount", merchant_bulk_discount_path(@merchant.id, discount.id), method: :delete, params: {id: discount.id} %>
    </h3>
    </div>
    <br>
  <% end %>
</div>
