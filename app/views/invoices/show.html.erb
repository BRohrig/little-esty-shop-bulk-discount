<h1>Invoice #: <%= @invoice.id %></h1>
<p>Status: <%= @invoice.status %></p>
<p>Created At: <%= @invoice.format_date_long %></p>
<p>Customer: <%= "#{@invoice.customer.first_name} #{@invoice.customer.last_name}" %></p>

<% @invoice.items.each do |item| %>
<br>
<p>Item Name: <%= item.name %> </p>
<p>Item Quantity: <%= @invoice.invoice_item(item).quantity %> </p>
<p>Item Price: $<%= @invoice.invoice_item(item).unit_price.to_f.round(2) %> </p>
<p>Item Status: <%= @invoice.invoice_item(item).status %> </p>
<% end %>
<br>
<h2> Invoice Total: $<%= @invoice.total_revenue.to_f.round(2) %></h2>